                <TextBox Name="InitialCatalogBox" HorizontalAlignment="Left" Height="26" Margin="10,93,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="368"/>
                <Label Content="Configuration File:" HorizontalAlignment="Left" Margin="5,119,0,0" VerticalAlignment="Top"/>
                <TextBox Name="ConfigurationFileBox" HorizontalAlignment="Left" Height="26" Margin="10,145,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="368"/>
            </Grid>
        </GroupBox>
    </Grid>
