<Window x:Class="_PlcAgent.Visual.Gui.Vector.GuiVFlashPathBankTransitionConditions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transition_Conditions" Height="480" Width="300" Icon="/PlcAgent;component/graph.ico" ResizeMode="NoResize" Closing="Closeing">
    <Grid>
        <DataGrid Name="ConditionsDataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Width="294" Height="452" AutoGenerateColumns="False" BorderThickness="1" GridLinesVisibility="None" Background="White" AlternatingRowBackground="#FFF6F6F6">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Result}" Header="Result" Width="220" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Accept" Width="60" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Condition}" HorizontalAlignment="Center" Checked="ConditionChecked" Unchecked="ConditionChecked"></CheckBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
