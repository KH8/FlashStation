<analyzer:AnalyzerComponent x:Class="_PlcAgent.Visual.Gui.Analyzer.GuiAnalyzerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:analyzer="clr-namespace:_PlcAgent.Analyzer"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="400">
    <Grid Name="GeneralGrid">
        <GroupBox Name="RecordingGroupBox" Header="Recording" Margin="0,0,0,0" HorizontalAlignment="Left" Height="65" VerticalAlignment="Top" Width="400">
            <Grid>
                <Label Name="AnalyzerTimeLabel" Content="Recording time: 00:00:00.0000000" HorizontalAlignment="Right" Height="28" VerticalAlignment="Center" HorizontalContentAlignment="Right" Width="294" Margin="0,8,0,7"/>
                <Button Name="AnalyzerStartStopButton" Content="Start" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" Width="90" Height="25" Click="StartStopRecording"/>
            </Grid>
        </GroupBox>
    </Grid>
</analyzer:AnalyzerComponent>
