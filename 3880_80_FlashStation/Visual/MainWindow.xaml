                </Grid>
            </TabItem>
            <TabItem Header="Online Communication">
                <Grid Name="OnlineCommunicationGrid">
                    <ListView Name="OnlineReadDataListBox" HorizontalAlignment="Left" Height="240" Margin="0,2,0,1" VerticalAlignment="Top" Width="335" ItemsSource="{Binding ReadInterfaceCollection}" Foreground="Black">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="65" Header="Addr." DisplayMemberBinding="{Binding Address}" />
                                <GridViewColumn Width="160" Header="Name" DisplayMemberBinding="{Binding Name}" />
                                <GridViewColumn Width="40" Header="Type" DisplayMemberBinding="{Binding Type}" />
                                <GridViewColumn Width="60" Header="Value" DisplayMemberBinding="{Binding Value}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView Name="OnlineWriteDataListBox" HorizontalAlignment="Right" Height="240" Margin="0,2,0,1" VerticalAlignment="Top" Width="335" ItemsSource="{Binding WriteInterfaceCollection}" Foreground="Black">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="65" Header="Addr." DisplayMemberBinding="{Binding Address}" />
                                <GridViewColumn Width="160" Header="Name" DisplayMemberBinding="{Binding Name}" />
                                <GridViewColumn Width="40" Header="Type" DisplayMemberBinding="{Binding Type}" />
                                <GridViewColumn Width="60" Header="Value" DisplayMemberBinding="{Binding Value}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Name="VFlashTab" Header="VFlash" IsEnabled="False">
                <Grid>
                    <GroupBox Header="Channel 1" HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Width="673">
                        <Grid>
                            <ProgressBar Name="VFlash1ProgressBar" HorizontalAlignment="Left" Height="16" Margin="62,0,0,51" VerticalAlignment="Bottom" Width="598" Foreground="{x:Null}" UseLayoutRounding="False"/>
                            <Label Content="Actual Path Path: " HorizontalAlignment="Left" VerticalAlignment="Top" Width="112"/>
                            <Label Name="VFlash1ProjectPathLabel" Content="Channel is not activated" HorizontalAlignment="Left" VerticalAlignment="Top" Width="548" Height="22" Margin="112,2,0,0" BorderBrush="#FFCFCFCF" Background="White" BorderThickness="1" Padding="5,1,2,2"/>
                            <Label Content="Progress: " HorizontalAlignment="Left" VerticalAlignment="Top" Width="61" Margin="0,26,0,0"/>
                            <Label Name="VFlash1StatusLabel" Content="No project loaded." HorizontalContentAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Top" Width="562" Margin="0,43,0,0" FontSize="10" Foreground="Red" Height="25"/>
                            <CheckBox Name="VFlash1ControlBox" Content="PC Control" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,80,5,0" Width="75" FlowDirection="RightToLeft" Checked="VFlashControlModeChanged" Unchecked="VFlashControlModeChanged"/>
                            <Button Name="VFlash1LoadButton" Content="Load Path" HorizontalAlignment="Left" Margin="5,0,0,5" VerticalAlignment="Bottom" Width="90" Height="25" RenderTransformOrigin="0.5,0.5" Click="LoadVFlashProject" ClickMode="Release"/>
                            <Button Name="VFlash1UnloadButton" Content="Unload Path" HorizontalAlignment="Left" Margin="100,0,0,5" VerticalAlignment="Bottom" Width="90" Height="25" RenderTransformOrigin="0.5,0.5" Click="UnloadVFlashProject" ClickMode="Release"/>
                            <Button Name="VFlash1FlashButton" Content="Flash" HorizontalAlignment="Left" Margin="195,0,0,5" VerticalAlignment="Bottom" Width="90" Height="25" RenderTransformOrigin="0.444,1.12" Click="FlashVFlashProject"  ClickMode="Release" FontWeight="Bold"/>
                            <Button Name="VFlash1FaultsButton" Content="Faults" HorizontalAlignment="Left" Margin="290,0,0,5" VerticalAlignment="Bottom" Width="90" Height="25" RenderTransformOrigin="0.444,1.12" Click="VFlashShowFaults"/>
                            <Label x:Name="VFlash1TimeLabel" Content="Remaining time: 0" HorizontalContentAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Top" Width="483" Margin="0,26,4,0" FontSize="10" Foreground="Black" Height="25"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Channel 2" HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Width="673" Margin="0,120,0,0">
                        <Grid/>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Name="VFlashProjectsTab" Header="VFlash Paths" IsEnabled="False">
                <Grid>
                    <ListView Name="VFlashBankListBox" HorizontalAlignment="Center" Height="206" Margin="0,0,0,37" VerticalAlignment="Top" Width="670" ItemsSource="{Binding VFlashProjectCollection}" Foreground="Black" SelectionChanged="VFlashProjectbankListViewSelection">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="60" Header="Type" DisplayMemberBinding="{Binding Type}" />
                                <GridViewColumn Width="600" Header="Path File" DisplayMemberBinding="{Binding Path}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Create Type" HorizontalAlignment="Right" Height="25" Margin="0,211,0,0" VerticalAlignment="Top" Width="100" Click="TypeCreation"/>
                    <Label Content="Type Number:" HorizontalAlignment="Left" Height="31" Margin="430,213,0,-1" VerticalAlignment="Top" Width="94"/>
                    <TextBox Name="TypeNumberBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="23" Margin="524,213,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="42"/>
                </Grid>
            </TabItem>
            <TabItem Header="Output">
                <GroupBox Header="Output Creation" HorizontalAlignment="Center" Height="100" VerticalAlignment="Top" Width="248" Margin="0,0,425,0">
                    <Grid>
                        <Label Content="Output File Type:" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="105" Margin="5,10,0,0"/>
                        <ComboBox Name="OutputTypeComboBox" Text="Select" HorizontalAlignment="Left" Margin="110,13,0,0" VerticalAlignment="Top" Width="120">
                            <ComboBoxItem Name="Xml">*.xml</ComboBoxItem>
                            <ComboBoxItem Name="Csv">*.csv</ComboBoxItem>
                            <ComboBoxItem Name="Xls">*.xls</ComboBoxItem>
                        </ComboBox>
                        <Button Content="CreateOutput" HorizontalAlignment="Right" Height="25" Margin="0,40,6,0" VerticalAlignment="Top" Width="100" Click="CreateOutput" ClickMode="Release"/>
                    </Grid>
                </GroupBox>
            </TabItem>
            <TabItem Header="Log">
                <Grid>
                    <ListBox Name="LogListBox" HorizontalAlignment="Center" Height="241" Margin="0,2,0,0" VerticalAlignment="Top" Width="670"/>
                </Grid>
            </TabItem>
            <TabItem Header="About">
                <Grid Background="#FF05467C" Margin="0,189,0,0">
                    <Image HorizontalAlignment="Left" Height="54" VerticalAlignment="Top" Width="211" Source="/3880_80_FlashStation;component/logoTT.jpg"/>
                    <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Margin="11,-190,1,0" Height="185"><LineBreak/><Run Text="FlashStation v 1.0"/><LineBreak/><Run Text="author: Krzysztof Reczek"/><LineBreak/><LineBreak/><Run Text="teamtechnik Production Technology Sp. z o.o."/><LineBreak/><Run Text="ul. Za Gora 23, 32-050 Skawina, Poland"/><LineBreak/><LineBreak/></TextBlock>
                </Grid>
            </TabItem>
        </TabControl>
        <Label Name="PlcStatusLabel" Content="Wrong Configuration!" HorizontalContentAlignment="Right" HorizontalAlignment="Center" Height="25" Margin="8,564,8,0" VerticalAlignment="Top" Width="682"  FontSize="10" Foreground="Red"/>
        <Label Name="VFlashChannel1StatusLabel" Content="vFlash Channel 1 Initialized" HorizontalContentAlignment="Right" HorizontalAlignment="Center" Height="25" Margin="8,580,8,0" VerticalAlignment="Top" Width="682"  FontSize="10" Foreground="Black"/>   
    </Grid>
</Window>
