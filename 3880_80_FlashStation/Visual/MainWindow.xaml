<Window x:Name="St80FlashStation" x:Class="_3880_80_FlashStation.Visual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ST80_FlashStation" Height="350" Width="525"
        Closing="CloseApp" ResizeMode="NoResize" Icon="/3880_80_FlashStation;component/teamtechnik.ico">
    <Grid Margin="0,0,0,-7">
        <TabControl HorizontalAlignment="Center" Height="275" VerticalAlignment="Top" Width="505" Margin="0,10,0,0">
            <TabItem Header="Connection Status">
                <Grid Background="#FFFFFFFF">
                    <GroupBox Header="PLC Configuration" HorizontalAlignment="Center" Height="206" VerticalAlignment="Top" Width="214" Margin="0,0,0,0">
                        <Grid>
                            <Label Content="IP Address:" HorizontalAlignment="Left" Height="25" Margin="9,-2,0,0" VerticalAlignment="Top" Width="80"/>
                            <Label Name="ActIpAddressLabel" Content="192.168.100.100" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="95,-2,0,0" VerticalAlignment="Top" Width="100"/>
                            <Label Content="Port:" HorizontalAlignment="Left" Height="25" Margin="9,16,0,0" VerticalAlignment="Top" Width="80"/>
                            <Label Name="ActPortLabel" Content="102" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="95,16,0,0" VerticalAlignment="Top" Width="100"/>
                            <Label Content="Rack:" HorizontalAlignment="Left" Height="25" Margin="9,33,0,0" VerticalAlignment="Top" Width="80"/>
                            <Label Name="ActRackLabel" Content="0" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="95,33,0,0" VerticalAlignment="Top" Width="100"/>
                            <Label Content="Slot:" HorizontalAlignment="Left" Height="25" Margin="9,50,0,0" VerticalAlignment="Top" Width="80"/>
                            <Label Name="ActSlotLabel" Content="0" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="95,50,0,0" VerticalAlignment="Top" Width="100"/>
                            <Label Content="Read DB Number:" HorizontalAlignment="Left" Height="25" Margin="9,68,0,0" VerticalAlignment="Top" Width="115"/>
                            <Label Name="ActReadDbNumberLabel" Content="1000" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="111,68,0,0" VerticalAlignment="Top" Width="85"/>
                            <Label Content="Read Start Address:" HorizontalAlignment="Left" Height="25" Margin="9,86,0,0" VerticalAlignment="Top" Width="115"/>
                            <Label Name="ActReadStartAddressLabel" Content="0" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="111,86,0,0" VerticalAlignment="Top" Width="85"/>
                            <Label Content="Read Data Length:" HorizontalAlignment="Left" Height="25" Margin="9,104,0,0" VerticalAlignment="Top" Width="115"/>
                            <Label Name="ActReadLengthLabel" Content="512" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="111,104,0,0" VerticalAlignment="Top" Width="85"/>
                            <Label Content="Write DB Number:" HorizontalAlignment="Left" Height="25" Margin="9,122,0,0" VerticalAlignment="Top" Width="115"/>
                            <Label Name="ActWriteDbNumberLabel" Content="1000" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="111,122,0,0" VerticalAlignment="Top" Width="85"/>
                            <Label Content="Write Start Address:" HorizontalAlignment="Left" Height="25" Margin="9,140,0,0" VerticalAlignment="Top" Width="115"/>
                            <Label Name="ActWriteStartAddressLabel" Content="512" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="111,140,0,0" VerticalAlignment="Top" Width="85"/>
                            <Label Content="Write Data Length:" HorizontalAlignment="Left" Height="25" Margin="9,158,0,0" VerticalAlignment="Top" Width="115"/>
                            <Label Name="ActWriteLengthLabel" Content="512" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="111,158,0,0" VerticalAlignment="Top" Width="85"/>
                        </Grid>
                    </GroupBox>
                    <Button Name="ConnectButton" Content="Connect" HorizontalAlignment="Center" Height="25" Margin="0,212,0,0" VerticalAlignment="Top" Width="100" Click="ConnectDisconnect"/>
                </Grid>
            </TabItem>
            <TabItem Header="Configuration">
                <Grid Background="#FFFFFFFF">
                    <GroupBox Header="PLC Communication Setup" HorizontalAlignment="Center" Height="206" VerticalAlignment="Top" Width="245" Margin="0,0,250,0">
                        <Grid>
                            <Label Content="IP Address:" HorizontalAlignment="Left" Height="25" Margin="25,10,0,0" VerticalAlignment="Top" Width="80"/>
                            <TextBox Name="IpAddressBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="105,10,0,0" TextWrapping="Wrap" Text="192.168.10.80" VerticalAlignment="Top" Width="100" TextChanged="IpAddressBoxChanged"/>
                            <Label Content="Port:" HorizontalAlignment="Left" Height="25" Margin="25,37,0,0" VerticalAlignment="Top" Width="80"/>
                            <TextBox Name="PortBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="105,37,0,0" TextWrapping="Wrap" Text="102" VerticalAlignment="Top" Width="100" TextChanged="PortBoxChanged"/>
                            <Label Content="Rack:" HorizontalAlignment="Left" Height="25" Margin="25,64,0,0" VerticalAlignment="Top" Width="80"/>
                            <TextBox Name="RackBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="105,64,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="100" TextChanged="RackBoxChanged"/>
                            <Label Content="Slot:" HorizontalAlignment="Left" Height="25" Margin="25,91,0,0" VerticalAlignment="Top" Width="80"/>
                            <TextBox Name="SlotBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="105,91,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="100" TextChanged="SlotBoxChanged"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="PLC Data Setup" HorizontalAlignment="Left" Height="206" Margin="250,0,0,0" VerticalAlignment="Top" Width="245">
                        <Grid>
                            <Label Content="Read DB Number:" HorizontalAlignment="Left" Height="25" Margin="16,10,0,0" VerticalAlignment="Top" Width="115"/>
                            <TextBox Name="ReadDbAddressBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="131,10,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="85" TextChanged="ReadDbNumberBoxChanged"/>
                            <Label Content="Read Start Address:" HorizontalAlignment="Left" Height="25" Margin="16,37,0,0" VerticalAlignment="Top" Width="115"/>
                            <TextBox Name="ReadDbStartAddressBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="131,37,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="85" TextChanged="ReadStartAddressBoxChanged"/>
                            <Label Content="Read Data Length:" HorizontalAlignment="Left" Height="25" Margin="16,64,0,0" VerticalAlignment="Top" Width="115"/>
                            <TextBox Name="ReadDbLengthBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="131,64,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="85" TextChanged="ReadLengthBoxChanged"/>
                            <Label Content="Write DB Number:" HorizontalAlignment="Left" Height="25" Margin="16,92,0,0" VerticalAlignment="Top" Width="115"/>
                            <TextBox x:Name="WriteDbAddressBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="131,92,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="85" TextChanged="WriteDbNumberBoxChanged"/>
                            <Label Content="Write Start Address:" HorizontalAlignment="Left" Height="25" Margin="16,119,0,0" VerticalAlignment="Top" Width="115"/>
                            <TextBox x:Name="WriteDbStartAddressBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="131,119,0,0" TextWrapping="Wrap" Text="512" VerticalAlignment="Top" Width="85" TextChanged="WriteStartAddressBoxChanged"/>
                            <Label Content="Write Data Length:" HorizontalAlignment="Left" Height="25" Margin="16,146,0,0" VerticalAlignment="Top" Width="115"/>
                            <TextBox x:Name="WriteDbLengthBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="25" Margin="131,146,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="85" TextChanged="WriteLengthBoxChanged"/>
                        </Grid>
                    </GroupBox>
                    <Button Content="Use Settings" HorizontalAlignment="Center" Height="25" Margin="389,211,6,0" VerticalAlignment="Top" Width="100" Click="StoreSettings"/>
                </Grid>
            </TabItem>
            <TabItem Header="Online">
                <Grid Background="#FFFFFFFF">
                    <ListBox Name="OnlineReadDataListBox" HorizontalAlignment="Left" Height="240" Margin="0,0,0,0" VerticalAlignment="Center" Width="245"/>
                    <ListBox Name="OnlineWriteDataListBox" HorizontalAlignment="Right" Height="240" Margin="250,0,0,0" VerticalAlignment="Center" Width="245"/>
                </Grid>
            </TabItem>
            <TabItem Header="About">
                <Grid Background="#FFFFFFFF"/>
            </TabItem>
        </TabControl>
        <Label Name="StatusLabel" Content="Wrong Configuration!" HorizontalContentAlignment="Right" HorizontalAlignment="Center" Height="25" Margin="10,285,7,0" VerticalAlignment="Top" Width="502"  FontSize="10" Foreground="Red"/>
    </Grid>
</Window>
